<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pulau_lumba_lumba"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pulau"
    tools:context="pulau.com.pulauterunik.PulauLumbaLumba">

    <RelativeLayout
        android:id="@+id/test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:id="@+id/button"
            android:background="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="      Pulau yang berlokasi di Flores, Nusa Tenggara Timur ini memiliki bentuk yang khas yaitu mirip dengan lumba-lumba. Bentuk pulau yang sangat indah ini mampu menarik perhatian wisatawan mancanegara sehingga pulau ini menduduki peringkat sepuluh besar pulau terunik di dunia. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="#0b0b0b"
            android:background="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_marginTop="360dp"
            android:layout_below="@+id/imageView2"
             />

        <TextView
            android:text="Pulau Lumba-Lumba"
            android:textSize="20dp"
            android:textColor="#080808"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" />

        <TextView
            android:text="      Jika dilihat dari atas langit, bentuk pulau ini memang sangat mirip dengan bentuk lumba-lumba yang muncul dari atas permukaan. Uniknya lagi, di sekitar pulau ini juga dihuni oleh beberapa lumba-lumba. Wah, kebenaran nama Pulau Lumba-Lumba ini semakin lengkap ya! Mungkin karena itulah pulau ini dinamakan dengan Pulau Lumba-Lumba. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="#080808"
            android:textSize="20dp"
            android:layout_marginTop="29dp"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="230dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/lumba"
            android:id="@+id/imageView2"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp" />

    </RelativeLayout>

</ScrollView>
